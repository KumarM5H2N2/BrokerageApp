<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h2 class="h1 display-4">S'inscrire BrokerageApp</h2>
  <p class="lead">Inscrivez vous pour profiter d'une étude de votre demande de crédit !</p>
</div>
<% if(locals.error ){%>
<div class="alert alert-danger" role="alert"><%= locals.error %></div>
<% } %>

<form action="/signup" method="POST" class="form-signup">

  <div class="form-label-group">
    <input type="email" class="form-control" id="email" name="email" aria-describedby="email" placeholder="Votre email" />
    <label for="email">Votre courriel</label>
    <small id="nomHelp" class="form-text text-muted">Nous ne partagerons jamais votre courriel.</small>
  </div>

  <div class="form-label-group">
    <input type="prenom" class="form-control" id="prenom" name="prenom" aria-describedby="prenomHelp" placeholder="Votre prénom" />
    <label for="prenom">Votre prenom</label>
    <small id="nomHelp" class="form-text text-muted">Nous ne partagerons jamais votre prenom.</small>
  </div>

  <div class="form-label-group">
    <input type="nom" class="form-control" id="nom" name="nom" aria-describedby="nomHelp" placeholder="Votre nom" />
    <label for="nom">Votre nom</label>
    <small id="nomHelp" class="form-text text-muted">Nous ne partagerons jamais votre nom.</small>
  </div>

  <div class="form-label-group">
    <input type="password" class="form-control" id="password" name="password" placeholder="Votre mot de mot de passe" />
    <label for="password">Votre mot de mot de passe</label>
  </div>


  
  <div class="form-label-group">
    <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" placeholder="Confirmez votre mot de passe" />
    <label for="passwordConfirm">Confirmez votre mot de passe</label>
  </div>




  <div class="form-group text-center">
    <button type="submit" class="btn btn-primary">Envoyer</button>
  </div>
</form>

<%- include('partials/footer') %>